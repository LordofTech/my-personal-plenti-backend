# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/plenti_db?createDatabaseIfNotExist=true&autoReconnect=TRUE
DB_USERNAME=root
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_256_bits_base64_encoded

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4200,https://yourdomain.com

# Huawei OBS (Object Storage Service) Configuration
HUAWEI_OBS_ACCESS_KEY_ID=your_huawei_obs_access_key
HUAWEI_OBS_SECRET_ACCESS_KEY=your_huawei_obs_secret_key
HUAWEI_OBS_BUCKET_NAME=your_bucket_name
HUAWEI_OBS_REGION=af-south-1
HUAWEI_OBS_ENDPOINT=https://obs.af-south-1.myhuaweicloud.com

# Termii SMS API Configuration
TERMII_API_KEY=your_termii_api_key
